{
  "name": "alekseew-arduino",
  "version": "0.4.1",
  "description": "Get data from arduino through the serial port and setup the bobby-car race that is hold in Bammental - Germany.",
  "keywords": [
    "arduino",
    "node",
    "nodejs",
    "typescript",
    "serialport",
    "bobby-car",
    "race",
    "bammental"
  ],
  "author": "Michael Alekseew <alekseew.m@googlemail.com>",
  "repository": "https://github.com/Mischa1610/arduino-bobbycar-race-bammental",
  "homepage": "https://bobbycar-race-bammental.web.app",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16.15.0",
    "npm": ">=8.11.0"
  },
  "scripts": {
    "ng": "nx",
    "prepare": "husky install",
    "postinstall": "node ./decorate-angular-cli.js && ngcc --properties es2020 browser module main",
    "start": "concurrently -k -p '[{name}]' -n 'Backend-Nest,Frontend-Angular' -c 'magenta.bold,cyan.bold' 'npm run start-be' 'npm run start-fe'",
    "start-be": "nx serve api",
    "start-fe": "nx serve bobbycar-race-bammental --host 0.0.0.0",
    "build": "npm run build-be & npm run build-fe",
    "build-be": "nx build api --prod",
    "build-fe": "nx build bobbycar-race-bammental --prod",
    "test": "npm run test-be && npm run test-fe",
    "test-be": "nx test api --code-coverage",
    "test-fe": "nx test bobbycar-race-bammental --code-coverage",
    "lint": "nx workspace-lint && npm run lint-be && npm run lint-fe",
    "lint-be": "nx lint api",
    "lint-fe": "nx lint bobbycar-race-bammental",
    "format": "nx format",
    "format-check": "nx format:check"
  },
  "dependencies": {
    "@angular/animations": "^14.0.2",
    "@angular/cdk": "^14.0.2",
    "@angular/common": "^14.0.2",
    "@angular/compiler": "^14.0.2",
    "@angular/core": "^14.0.2",
    "@angular/fire": "^7.4.1",
    "@angular/forms": "^14.0.2",
    "@angular/material": "^14.0.2",
    "@angular/platform-browser": "^14.0.2",
    "@angular/platform-browser-dynamic": "^14.0.2",
    "@angular/router": "^14.0.2",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@ngneat/transloco": "^4.1.0",
    "@nrwl/angular": "~14.3.6",
    "flag-icons": "^6.6.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "~7.5.5",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.2",
    "@angular-eslint/eslint-plugin": "~13.5.0",
    "@angular-eslint/eslint-plugin-template": "~13.5.0",
    "@angular-eslint/template-parser": "~13.2.1",
    "@angular/cli": "^14.0.2",
    "@angular/compiler-cli": "^14.0.2",
    "@angular/language-service": "^14.0.2",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.3",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@nrwl/cli": "~14.3.6",
    "@nrwl/cypress": "~14.3.6",
    "@nrwl/eslint-plugin-nx": "~14.3.6",
    "@nrwl/jest": "~14.3.6",
    "@nrwl/linter": "~14.3.6",
    "@nrwl/nest": "~14.3.6",
    "@nrwl/node": "~14.3.6",
    "@nrwl/nx-cloud": "^14.1.2",
    "@nrwl/workspace": "~14.3.6",
    "@types/jest": "~27.4.1",
    "@types/node": "~16.11.7",
    "@typescript-eslint/eslint-plugin": "~5.34.0",
    "@typescript-eslint/parser": "~5.24.0",
    "concurrently": "^7.2.2",
    "cypress": "^9.1.0",
    "eslint": "~8.18.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-cypress": "^2.10.3",
    "husky": "^8.0.1",
    "jest": "~27.5.1",
    "jest-preset-angular": "~11.1.2",
    "lint-staged": "^13.0.2",
    "nx": "~14.3.6",
    "prettier": "^2.6.2",
    "ts-jest": "~27.1.4",
    "ts-node": "~10.8.0",
    "typescript": "~4.7.2"
  },
  "lint-staged": {
    "*.js,*.ts,*.html,*.scss,*.css,*.json": "nx workspace-lint --fix && nx lint api --fix && nx lint bobbycar-race-bammental --fix",
    "*": "prettier --ignore-unknown --write"
  }
}
